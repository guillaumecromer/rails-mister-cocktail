<div class="home-banner">
<h1>Cocktails Batch Club</h1>
</div>

<div class="container">
  <div class="row">
  <% @cocktails.each do |cocktail| %>
    <div class="col-sm card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1536935338788-846bb9981813?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60)">
        <%=link_to cocktail_path(cocktail) do %>
          <h2><strong><%= cocktail.name %></strong></h2>
        <% end %>
    </div>
  <% end %>
  </div>
</div>


