<div class="dose-banner">
<h1><%= @cocktail.name %></h1>
</div>

<div class='container'>
  <div class='image-cocktail'>
  <img src='<%= cl_image_path @cocktail.photo, width: 150, height: 150, crop: :fill %>' class="img-thumbnail">
  </div>
  <div>
    <h2>Let's add or delete ingredients to this cocktail</h2>
    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <div class="form-inputs">
        <%= f.association :ingredient %>
      </div>

       <div class="form-inputs">
        <%= f.input :description %>
      </div>

      <div class="form-actions">
        <%= f.button :submit %>
      </div>
    <% end %>
  </div>
</div>
